# ========================================
# Oracle Database 接続情報
# ========================================
DB_USERNAME=rag
DB_PASSWORD=your_password_here
DB_DSN=(description= (retry_count=5)(retry_delay=3)(address=(protocol=tcps)(port=1522)(host=adb.your-region.oraclecloud.com))(connect_data=(service_name=your_service_name_high.adb.oraclecloud.com))(security=(ssl_server_dn_match=yes)))

# ========================================
# OCI 認証情報
# ========================================
# ~/.oci/config ファイルのパス（デフォルト: ~/.oci/config）
OCI_CONFIG_FILE=~/.oci/config
# 使用するプロファイル名（デフォルト: DEFAULT）
OCI_PROFILE=DEFAULT

# ========================================
# OCI Generative AI Service
# ========================================
OCI_COMPARTMENT_ID=ocid1.compartment.oc1..aaaaaaaa...
OCI_GENAI_ENDPOINT=https://inference.generativeai.your-region.oci.oraclecloud.com
OCI_EMBED_MODEL=cohere.embed-v4.0
OCI_LLM_MODEL=cohere.command-r-plus

# ========================================
# OCI Object Storage (Optional)
# ========================================
OCI_BUCKET_NAME=rag-source

# ========================================
# Application Settings
# ========================================
CHUNK_SIZE=500
CHUNK_OVERLAP=50
TOP_K=5
